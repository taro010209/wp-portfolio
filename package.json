{
  "scripts": {
    "sass:sass": "sass ./src/scss:./assets/css --style expanded --no-source-map",
    "sass:shaping": "postcss ./assets/css/style.css --use postcss-sort-media-queries postcss-combine-duplicated-selectors autoprefixer cssnano -o ./assets/css/style.css -c ./postcss.config.js -map",
    "css": "npm-run-all -s sass:*",
    "watch": "watch 'npm run css' ./src/scss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^9.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-sort-media-queries": "^4.3.0",
    "sass": "^1.56.1",
    "watch": "^0.19.2"
  },
  "browserslist": [
    "last 3 Chrome versions",
    "last 3 Firefox versions",
    "last 3 Edge versions",
    "last 3 Safari versions",
    "last 3 iOS major versions",
    "Android >= 10"
  ]
}
